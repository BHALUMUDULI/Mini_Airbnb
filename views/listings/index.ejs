<% layout("/layouts/boilerplate") %>

<!-- FILTER SECTION -->
<div id="filters" class="d-flex align-items-center mb-3">

    <div class="filter-scroll-container d-flex align-items-center">

        <div class="filter" data-category="Villa" onclick="applyFilter('Villa')">
            <div><i class="fa-solid fa-building"></i></div>
            <p>Villa</p>
        </div>

        <div class="filter" data-category="Apartment" onclick="applyFilter('Apartment')">
            <div><i class="fa-solid fa-city"></i></div>
            <p>Apartment</p>
        </div>

        <div class="filter" data-category="Farmhouse" onclick="applyFilter('Farmhouse')">
            <div><i class="fa-solid fa-tractor"></i></div>
            <p>Farmhouse</p>
        </div>

        <div class="filter" data-category="Room" onclick="applyFilter('Room')">
            <div><i class="fa-solid fa-bed"></i></div>
            <p>Room</p>
        </div>
    </div>

    <!-- Tax Toggle -->
    <div class="tax-toggle ms-auto">
        <span>Display Tax</span>
        <label class="switch">
            <input type="checkbox" id="taxSwitch" onchange="toggleTax()">
            <span class="slider round"></span>
        </label>
    </div>
</div>


<!-- LISTINGS GRID -->
<div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4">

    <% listings.forEach(listing => { %>
    <div class="col listing-card" data-category="<%= listing.category %>">

        <div class="card border-0">
            <a href="/listings/<%= listing._id %>">
                <img src="<%= listing.image.url %>" class="card-img-top" alt="Listing Image">
            </a>

            <div class="card-body">
                <p class="card-text fw-bold"><%= listing.title %></p>
                <p class="card-text text-muted"><%= listing.location %></p>

                <p class="card-text price">
                    â‚¹<%= listing.price %>
                    <span class="tax-text text-muted" style="display:none;"> + tax</span>
                </p>
            </div>
        </div>

    </div>
    <% }) %>

</div>


<!-- FILTER & TOGGLE SCRIPT -->
<script>
function applyFilter(category) {
    const cards = document.querySelectorAll(".listing-card");

    cards.forEach(card => {
        if (category === "All" || card.dataset.category === category) {
            card.style.display = "block";
        } else {
            card.style.display = "none";
        }
    });
}

function toggleTax() {
    const showTax = document.getElementById("taxSwitch").checked;
    const taxTexts = document.querySelectorAll(".tax-text");

    taxTexts.forEach(t => {
        t.style.display = showTax ? "inline" : "none";
    });
}
</script>
