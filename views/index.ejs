<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/styles/main.css">
    <title>Property Listings</title>
</head>
<body>
    <header>
        <h1>Welcome to Mini Airbnb</h1>
        <div class="filter-ui">
            <input type="text" id="searchBar" placeholder="Search properties...">
            <select id="filterPrice">
                <option value="">Select Price Range</option>
                <option value="0-100">$0 - $100</option>
                <option value="101-200">$101 - $200</option>
                <option value="201-300">$201 - $300</option>
            </select>
            <button id="filterButton">Apply Filters</button>
        </div>
    </header>
    <main>
        <div class="property-list">
            <% properties.forEach(function(property) { %>
                <div class="property-card">
                    <img src="<%= property.image %>" alt="<%= property.name %>">
                    <h2><%= property.name %></h2>
                    <p>Price: $<%= property.price %> per night</p>
                    <p><%= property.description %></p>
                    <a href="/property/<%= property.id %>" class="view-details">View Details</a>
                </div>
            <% }); %>
        </div>
    </main>
    <footer>
        <p>&copy; 2026 Mini Airbnb. All rights reserved.</p>
    </footer>
    <script src="/scripts/filter.js"></script>
</body>
</html>
